<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFF0F3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:text="Add Trusted Contacts"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#C2185B"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Contact 1 -->
        <EditText
            android:id="@+id/contact1Name"
            android:hint="Contact 1 Name"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/contact1Number"
            android:hint="Contact 1 Number"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:layout_marginBottom="20dp" />

        <!-- Contact 2 -->
        <EditText
            android:id="@+id/contact2Name"
            android:hint="Contact 2 Name"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/contact2Number"
            android:hint="Contact 2 Number"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/saveContactsBtn"
            android:text="Save Trusted Contacts"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#C2185B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
