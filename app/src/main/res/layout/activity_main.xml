<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- ===== MAIN HOME CONTENT ===== -->
    <LinearLayout
        android:id="@+id/mainContent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ===== Top Bar (explicit height) ===== -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#E91E63"
            android:orientation="horizontal"
            android:gravity="center_vertical|end"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:id="@+id/topTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secura"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginEnd="12dp"/>

            <!-- 3-dot menu icon (top-right) -->
            <ImageView
                android:id="@+id/menuIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_menu"
                app:tint="#FFFFFF"
                android:contentDescription="Menu"/>
        </LinearLayout>

        <!-- ===== Scrollable Content (explicit height match_parent) ===== -->
        <ScrollView
            android:id="@+id/mainScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/scrollContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="24dp">

                <!-- Header -->
                <LinearLayout
                    android:id="@+id/headerRow"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/headerIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_shield"
                        app:tint="#E91E63" />

                    <TextView
                        android:id="@+id/headerTitle"
                        android:layout_width="267dp"
                        android:layout_height="wrap_content"
                        android:text="Secura"
                        android:textColor="#E91E63"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Subtitle -->
                <TextView
                    android:id="@+id/subTitle"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:text="Your Personal Safety Companion"
                    android:textColor="#555555"
                    android:textSize="15sp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="20dp" />

                <!-- SOS Card -->
                <LinearLayout
                    android:id="@+id/sosCard"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_card"
                    android:padding="20dp"
                    android:elevation="4dp">

                    <TextView
                        android:id="@+id/sosTitle"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:text="Emergency SOS"
                        android:textColor="#E91E63"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Big Circular SOS Button -->

                    <TextView
                        android:id="@+id/sosDesc"
                        android:layout_width="match_parent"
                        android:layout_height="61dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:text="Press the button below to activate emergency mode."
                        android:textColor="#555"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/sosButton"
                        android:layout_width="170dp"
                        android:layout_height="158dp"
                        android:layout_gravity="center"
                        android:background="@drawable/sos_button_bg"
                        android:backgroundTint="@null"
                        android:text="SOS"
                        android:textColor="#FFFFFF"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sosNotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="When activated:\nâ€¢ Audio recording starts\nâ€¢ Trusted contacts are alerted\nâ€¢ Quick emergency access"
                        android:textColor="#777"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- Feature Cards (Grid) -->
                <GridLayout
                    android:id="@+id/featureGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:layout_marginTop="24dp"
                    android:alignmentMode="alignMargins"
                    android:rowCount="2"
                    android:rowOrderPreserved="false">

                    <!-- Fake Call -->
                    <LinearLayout
                        android:id="@+id/fakeCallButton"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:background="@drawable/feature_card"
                        android:padding="20dp"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/icFakeCall"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_call"
                            app:tint="#3F51B5" />

                        <TextView
                            android:id="@+id/fakeCallTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fake Call"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            android:textColor="#000"/>

                        <TextView
                            android:id="@+id/fakeCallSub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Simulate incoming call"
                            android:textSize="13sp"
                            android:textColor="#666"/>
                    </LinearLayout>

                    <!-- Recordings -->
                    <LinearLayout
                        android:id="@+id/recordingsButton"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:background="@drawable/feature_card"
                        android:padding="20dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/icRecordings"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_mic"
                            app:tint="#9C27B0" />

                        <TextView
                            android:id="@+id/recordingsTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recordings"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            android:textColor="#000"/>

                        <TextView
                            android:id="@+id/recordingsSub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" View recordings"
                            android:textSize="13sp"
                            android:textColor="#666"/>
                    </LinearLayout>

                    <!-- Helplines -->
                    <LinearLayout
                        android:id="@+id/helplineButton"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:background="@drawable/feature_card"
                        android:padding="20dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/icHelplines"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_phone"
                            app:tint="#009688" />

                        <TextView
                            android:id="@+id/helplinesTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Helplines"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            android:textColor="#000"/>

                        <TextView
                            android:id="@+id/helplinesSub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  Emergency No."
                            android:textSize="13sp"
                            android:textColor="#666"/>
                    </LinearLayout>

                    <!-- Call History -->
                    <LinearLayout
                        android:id="@+id/callHistoryButton"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:background="@drawable/feature_card"
                        android:padding="20dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/icHistory"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_history"
                            app:tint="#FF9800" />

                        <TextView
                            android:id="@+id/callHistoryTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Call History"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            android:textColor="#000"/>

                        <TextView
                            android:id="@+id/callHistorySub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" View fake calls"
                            android:textSize="13sp"
                            android:textColor="#666"/>
                    </LinearLayout>
                </GridLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- ===== Sidebar Drawer (opens from RIGHT) ===== -->
    <LinearLayout
        android:id="@+id/sidebarLayout"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="20dp"
        android:layout_gravity="end">

        <ImageView
            android:id="@+id/drawerIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_shield"
            app:tint="#E91E63"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/drawerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Secura"
            android:textColor="#E91E63"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/navTrustedContacts"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="ðŸ‘¥ Trusted Contacts"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/navRecordings"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="ðŸŽ™ Recordings"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/navHelplines"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="ðŸ“ž Helplines"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/navFakeCall"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="ðŸ“± Fake Call"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/navCallHistory"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="ðŸ•“ Call History"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/navLogout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="ðŸšª Logout"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"/>




    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
